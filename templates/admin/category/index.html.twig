

{% extends 'admin/index.html.twig' %}


{% block content %}
 <!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row shadow-sm p-3 mt-2 mb-2 bg-white rounded">
            <div class="col-sm-6">
                <h1 class="m-0">Categories <a href="{{ path('app_category_new') }}"><button class="btn btn-sm btn-primary">Add New</button></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{path('app_admin')}}">Dashboard</a></li>
                    <li class="breadcrumb-item active"> Categories</li>
                </ol>
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="content">
    <div class="container-fluid">
     {# data table starts  #}
        <div class="card">

            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="40px">S. NO</th>
                            <th>Title</th>
                            <th>Tags</th>
                            <th>Created at</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                        {% for category in categories %}
                       
                        <tr>
                            <td>{{ loop.index }}</td>
                             <td>{{ category.name }}</td>
                             <td>{{ category.tags }}</td>
                             <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ category.status ? 'Active' : 'Inactive' }}</td>


                            <td class="d-flex">
                               <button  class="btn"><a href="{{ path('app_category_edit', {'id': category.id}) }}" title="Edit Data"><i class="fas fa-edit"></i></a></button>
                                <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button class="btn" title="Delete Data"><i class="fas fa-trash-alt"></i></button>
                                </form>                             
                            </td>
                            </tr>
                        
                        
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th width="40px">S. NO</th>
                            <th>Title</th>
                            <th>Tags</th>
                            <th>Created at</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
         {# data tables end  #}

   

    </div>
    </div>




{% endblock %}

