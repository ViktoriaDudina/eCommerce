      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <div class="ms-auto d-flex align-items-center">
        <form
          action="{{ path('app_search') }}"
          method="get"
          class="d-flex my-2 my-lg-0"
        >
          <div class="input-group">
            <span class="input-group-text bg-orange text-white border-warning">
              <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input
              type="search"
              class="form-control border-warning"
              placeholder="Search..."
              name="query"
              style="color: white"
            />
            <button class="btn btn-warning text-white bg-orange" type="submit">
              Search
            </button>
          </div>
        </form>
      </div>
      <ul class="navbar-nav ms-auto custom-navbar_font">
        <li class="nav-item">
          <a
            class="nav-link mx-2 text-uppercase active"
            aria-current="page"
            href="/"
            >Home</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link mx-2 text-uppercase" href="/products">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link mx-2 text-uppercase" href="/contact">Contact Us</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto custom-navbar_font">
        <li class="nav-item">
          <a
            class="nav-link mx-2 text-uppercase"
            href="{{ path('app_wishlist') }}"
          >
            <i
              class="fa-solid fa-heart me-1"
              style="color: #f7941d; position: relative"
            >
              <span
                class="badge bg-warning text-dark"
                style="
                  position: absolute;
                  top: -8px;
                  right: -8px;
                  font-size: 8px;
                "
              ></span>
            </i>
            Wishlist
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link mx-2 text-uppercase" href="{{ path('app_cart') }}">
            <i
              class="fa-solid fa-cart-shopping me-1"
              style="color: #f7941d; position: relative"
            >
              {% if cartItemCount is defined and cartItemCount > 0 %}
              <span
                class="badge bg-warning text-dark"
                style="
                  position: absolute;
                  top: -8px;
                  right: -8px;
                  font-size: 8px;
                "
                >{{ cartItemCount }}</span
              >
              {% endif %}
            </i>
            Cart
          </a>
        </li>
      </ul>
    </div>
  </div>
