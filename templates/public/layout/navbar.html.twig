<div class="superNav border-bottom py-2 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 centerOnMobile">
        <span
          class="d-none d-lg-inline-block d-md-inline-block d-sm-none d-xs-none me-3"
          ><strong
            ><i class="fa-regular fa-envelope pe-1" style="color: #f7941d"></i
            >info@bestclothes.com</strong
          ></span
        >
      </div>
      <div
        class="col-lg-6 col-md-6 col-sm-12 col-xs-12 d-lg-block d-md-block-d-sm-block d-xs-none text-end"
      >
        {% if app.user %} {# User is authenticated, show profile and logout
        button #}
        <span class="me-3">
          <i class="fa-solid fa-user me-1" style="color: #f7941d"></i>
          <a class="text-muted no-underline" href="{{ path('app_profile') }}"
            >My Profile</a
          >
        </span>
        <span class="me-3">
          <i class="fa-solid fa-sign-out-alt me-1" style="color: #f7941d"></i>
          <a class="text-muted no-underline" href="{{ path('app_logout') }}"
            >Logout</a
          >
        </span>
        {% else %} {# User is not authenticated, show login and register links
        #}
        <span class="me-3">
          <i class="fa-solid fa-user me-1" style="color: #f7941d"></i>
          <a class="text-muted no-underline" href="{{ path('app_login') }}"
            >Login</a
          >
        </span>
        <span class="me-3">
          <i class="fa-solid fa-file me-2" style="color: #f7941d"></i>
          <a class="text-muted no-underline" href="{{ path('app_register') }}"
            >Register</a
          >
        </span>
        {% endif %}
      </div>
    </div>
  </div>
</div>
