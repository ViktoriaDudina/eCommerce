{% extends 'public/index.html.twig' %} {% block title %} Checkout {% endblock %}
{% block content %}
<div class="container my-5 vh-100">
  <div class="row">
    <!-- Cart Summary -->
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
          <h4 class="card-title">Your Cart</h4>
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              {% for item in cartItems %}
              <tr>
                <td>{{ item.product.title }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.price | number_format(2) }} €</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <div class="text-end">
            <h5>Total: {{ total }} €</h5>
          </div>
        </div>
      </div>
    </div>

    <!-- Checkout Form -->
    <div class="col-md-4">
      <div class="card mt-4 mt-md-0">
        <div class="card-body">
          <h4 class="card-title">Place Your Order</h4>
          <form action="{{ path('app_create_order') }}" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="address"
                required
              />
            </div>
            <!-- Additional form fields can be added here -->
            <button type="submit" class="btn btn-outline-dark">Buy Now</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
